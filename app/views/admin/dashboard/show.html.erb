<section class="dashboard-show">

<header class="page-header">
  <h2>My Dashboard</h2>
</header>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Total amount of products</th>
      <th>Total amount of categories</th>
    </tr>
  </thead>
  <tbody>
    <td>
      <%= @product_count %>
    </td>
    <td>
      <%= @category_count %>
    </td>
    <td><%= link_to "View products", admin_products_path, class: "btn btn-outline-success" %></td>
    <td><%= link_to "View categories", admin_categories_path, class: "btn btn-outline-success" %></td>
  </tbody>
</table>